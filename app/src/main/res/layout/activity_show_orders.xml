<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.davidgod93.homepost.ShowOrdersActivity">

    <!-- Waiting initial layout -->
    <LinearLayout
        android:id="@+id/aso_loading_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <include layout="@layout/undefined_progress_layout"/>

    </LinearLayout>

    <!-- Layout to inflate with data -->
    <RelativeLayout
        android:id="@+id/aso_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

    </RelativeLayout>

</RelativeLayout>
